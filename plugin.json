{
    "id": "nodebb-plugin-mtg",
    "name": "NodeBB MtG Plugin",
    "description": "NodeBB Plugin that changes MtG card names into images.",
    "url": "https://github.com/jacobbridges/nodebb-plugin-mtg.git",
    "library": "./index.js",
    "templates": "templates",
    "hooks": [
        { "hook": "filter:parse.post", "method": "parsePost" },
        { "hook": "filter:parse.raw", "method": "parseRaw" }
    ],
    "staticDirs": {
        "styles": "./public/styles",
        "js": "./public/js"
    },
    "scripts": [
        "static/main.js"
    ],
    "less": [
        "static/style.less"
    ],
    "css": [
        "public/styles/strip.css"
    ]
}
